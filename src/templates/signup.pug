block content
  .page.page--signup
    .auth
      .auth-head
        .auth-head-title Create Account
        a.auth-head-button.auth-head-button--signin(href = '#') User login

      form.form
        .form-input
          .form-input-label Email
          input.form-input-text.form-input-text--email(type = 'text'
