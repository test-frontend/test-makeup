{
  "production": false,
  "root": "./",
  "src": "./src",
  "build" : "./dest",
  "styles": {
    "src": "./src/styles/**/*.{sass,scss}",
    "build": "./dest/styles",
    "lint": {
      "rules": {
        "no-color-keywords": 0,
        "no-vendor-prefixes": 0
      }
    },
    "autoprefixer": {
      "browsers": ["last 3 versions"],
      "cascade": false
    }
  },
  "templates": {
    "src": "./src/templates/**/*.pug",
    "build": "./dest"
  },
  "images": {
    "src": "./src/images/**/*.{png,jpg,jpeg,gif,svg}",
    "build": "./dest/images"
  }
}
